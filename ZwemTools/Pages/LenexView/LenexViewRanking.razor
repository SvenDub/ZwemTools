@using ZwemTools.Data.Lenex.Xml
@inject IStringLocalizer<Strings> Localizer

<RadzenDataGrid Data="AgeGroup.Rankings" TItem="RankingElement">
    <Columns>
        <RadzenDataGridColumn TItem="RankingElement" Property="Place" Title="#" />
        <RadzenDataGridColumn TItem="RankingElement" Title="@Localizer["Name"]">
            <Template Context="r">
                @Meet.GetAthleteForResult(r.ResultId)?.FullName
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="RankingElement" Title="@Localizer["Time"]">
            <Template Context="r">
                @Meet.GetResult(r.ResultId)?.SwimTime.ToString(@"hh\:mm\:ss\.ff")
            </Template>
        </RadzenDataGridColumn>
    </Columns>
</RadzenDataGrid>

@code {
    [Parameter]
    public AgeGroupElement AgeGroup { get; set; } = new();

    [Parameter]
    public MeetElement Meet { get; set; } = new();
}
